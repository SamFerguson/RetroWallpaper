<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/obj_view"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/objImgPreview"
        android:layout_width="98dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/objSize"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:text="@string/objSize"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/objImgPreview"
        app:layout_constraintTop_toBottomOf="@+id/objSpeed" />

    <TextView
        android:id="@+id/objSpeed"
        android:layout_width="@dimen/sizeObjDesc"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="@string/objVelocity"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/objImgPreview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/objAngle"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:text="@string/objAngle"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/objSpeed"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/isSelected"
        android:layout_width="35dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toEndOf="@+id/objAngle"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>

