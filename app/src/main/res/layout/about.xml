<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundCharcoal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="@dimen/pad16"
        >

        <!-- Logo -->
        <ImageView
            android:id="@+id/aboutLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo_border" />

        <!--  Title -->
        <TextView
            android:id="@+id/aboutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/abtTitle"
            android:textSize="@dimen/titleSize"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/highlightWhite"
            android:paddingBottom="@dimen/pad16"/>

         <!-- Description -->
        <TextView
            android:id="@+id/aboutDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/abtDesc"
            android:textSize="@dimen/descSize"
            android:textAlignment="center"
            android:textColor="@color/highlightWhite"/>

    </LinearLayout>

</RelativeLayout>
