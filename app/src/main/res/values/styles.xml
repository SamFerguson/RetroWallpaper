<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/accentGray</item>
        <item name="colorPrimaryDark">@color/backgroundCharcoal</item>
        <item name="colorAccent">@color/highlightWhite</item>
    </style>

    <style name="fabStyle">
        <!-- Customize your theme here. -->
        <item name="android:background">@color/highlightAqua</item>
    </style>

    <style name="settingsItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingStart">@dimen/settingsPad</item>
        <item name="android:paddingEnd">@dimen/settingsPad</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>

    </style>

</resources>
